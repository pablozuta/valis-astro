---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <!--aca importamos la fuente del titulo de la pagina-->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Orbitron:wght@600&display=swap'
      rel='stylesheet'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap'
      rel='stylesheet'
    />

    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,400;0,500;0,700;1,200&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!--barra navegacion-->
    <nav class='navbar'>
      <div class='logo'>
        <a href='/'><span>VALIS</span></a>
      </div>
      <a href='#' class='toggle-button'>
        <span class='bar'></span>
        <span class='bar'></span>
        <span class='bar'></span>
        <span class='bar'></span>
      </a>
      <div class='navbar-links'>
        <ul>
          <li><a href='ubik.html'>BOOKS</a></li>
          <li><a href='cyberpunk.html'>CYBERPUNK</a></li>
          <li><a href='/tech'>TECH</a></li>
        </ul>
      </div>
    </nav>

    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Roboto Mono', monospace;
    background: rgb(9, 4, 9);
    text-align: center;
    font-size: 2rem;
  }

  .titleText {
    align-items: center;
    margin-top: 1rem;
  }

  h1 {
    align-items: center;
    font-size: 7vw;
    margin-top: 3.3rem;
    font-weight: 300;
    letter-spacing: 0.9rem;
    font-family: 'Orbitron', cursive;
    color: rgb(47, 231, 225);
  }

  h2 {
    font-size: 1.8rem;
    margin-left: 0.6rem;
  }

  h3 {
    margin-top: 1%;
    margin-left: 0.6rem;
    font-size: 1.4rem;
  }

  a {
    text-decoration: none;
    color: #000;
  }
  a:hover {
    text-decoration: none;
    color: rgb(196, 228, 233);
    cursor: pointer;
  }

  .menu-capitulos {
    margin: auto;
    margin-top: 2%;
    padding: 8px;
    opacity: 90%;
    background-color: rgb(239, 88, 194);
    text-align: left;
  }

  /* aca empieza el style de boxes*/

  .texto {
    margin: 3%;
    padding: 8px;
    opacity: 90%;
    background-color: rgb(186, 89, 231);
    text-align: left;
  }

  .textoAmarillo {
    margin: 3%;
    padding: 8px;
    opacity: 90%;
    background-color: rgb(71, 173, 166);
    text-align: left;
  }
  .textoBlanco {
    margin: 3%;
    padding: 8px;
    opacity: 90%;
    background-color: rgb(233, 236, 222);
    text-align: left;
  }

  .pText {
    padding: 0.7rem;
    line-height: 137%;
    color: black;
    font-size: 1.2rem;
    margin-top: 0.3%;
    font-weight: 100;
  }

  .imagen-articulo {
    margin-top: 3%;
    width: 580px;
    height: 610px;
    object-fit: cover;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .unordered-list li {
    list-style: armenian;
    font-size: medium;
    margin-left: 8%;
  }

  .top-button {
    font-family: Orbitron;
    background-color: #000000;
    border: none;
    margin-top: 1.3rem;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 20px;
    height: auto;
    border-radius: 2px;
    margin-bottom: 2%;
  }

  .top-button a {
    color: rgb(228, 212, 218);
  }
  .top-button a:hover {
    color: palevioletred;
  }

  .bandcamp-player-container {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* -------media queries-------- */

  @media (max-width: 520px) {
    h1 {
      font-size: 8vw;
    }

    .texto-articulo {
      padding: 1%;
    }

    .pText {
      padding: 0.3rem;
      line-height: 137%;
      color: black;
      font-size: 0.8rem;
      margin-top: 0.3%;
      font-weight: 50;
    }

    h3 {
      margin-left: 0.2rem;
      font-size: 1rem;
    }

    .imagen-articulo {
      width: 360px;
      height: 400px;
      object-fit: cover;
    }

    .unordered-list li {
      list-style: armenian;
      font-size: small;
      margin-left: 9.5%;
    }
  }

  footer {
    width: 100%;
    background-color: plum;
    text-align: center;
    font-size: 1.6rem;
  }

  /* BARRA DE NAVEGACION */
  .navbar {
    position: sticky;
    top: 0;
    background-color: black;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    z-index: 99;
  }

  .logo a {
    margin-left: 1.5rem;
    color: palevioletred;

    margin-top: 0.5rem;
    width: 50px;
    cursor: pointer;
  }

  .navbar-links ul {
    margin: 0;
    padding: 0;
    display: flex;
  }

  .navbar-links li {
    list-style: none;
  }

  .navbar-links li a {
    text-decoration: none;
    color: white;
    padding: 1rem;
    display: block;
  }

  .navbar-links li:hover {
    background-color: palevioletred;
  }

  .toggle-button {
    margin-right: 2%;
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 30px;
  }

  .toggle-button .bar {
    height: 3px;
    width: 100%;
    background-color: palevioletred;
    border-radius: 10px;
  }

  @media (max-width: 600px) {
    .toggle-button {
      display: flex;
    }
    .navbar-links {
      display: none;
      width: 100%;
    }

    .logo {
      margin: 0.2rem;
      margin-top: 0.6rem;
      margin-left: 0.8rem;
    }
    .navbar {
      flex-direction: column;
      align-items: flex-start;
    }
    .navbar-links ul {
      width: 100%;
      flex-direction: column;
    }
    .navbar-links li {
      text-align: center;
    }
    .navbar-links li a {
      padding: 0.5rem 1rem;
    }
    .navbar-links.active {
      display: flex;
    }
  }
  /* FIN BARRA DE NAVEGACION */
</style>

<script>
  const toggleButton = document.getElementsByClassName('toggle-button')[0];
  const navbarLinks = document.getElementsByClassName('navbar-links')[0];

  toggleButton.addEventListener('click', () => {
    navbarLinks.classList.toggle('active');
  });
</script>
